<Window x:Class="MultiMine.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultiMine"
        mc:Ignorable="d"
        Title="GameWindow" Height="450" Width="800"
        ResizeMode="NoResize">
    <Grid>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="GameWindow!" VerticalAlignment="Top" Margin="0,10,0,0" Name="textField"/>
        <Grid HorizontalAlignment="Center"  VerticalAlignment="Center" MinWidth="200" MinHeight="200" Name="mainGrid"/>
        <Button Content="back" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Name="backButton" Click="backButton_Click"/>

    </Grid>
</Window>
