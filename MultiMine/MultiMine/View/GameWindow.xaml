<Window x:Class="MultiMine.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultiMine"
        mc:Ignorable="d"
        Title="GameWindow" Height="800" Width="1200"
        ResizeMode="NoResize">
    <Grid>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="GameWindow!" VerticalAlignment="Top" Margin="0,10,0,0" Name="textField"/>
        <Grid HorizontalAlignment="Center"  VerticalAlignment="Center" MinWidth="200" MinHeight="200" Name="mainGrid" Margin="15,0,0,114"/>
        <Button Content="back" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Name="backButton" Click="backButton_Click"/>
        <TextBox x:Name="chat" HorizontalAlignment="Left" Height="32" Margin="1001,730,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="186" KeyDown="chat_KeyDown"/>
        <ListBox x:Name="chatview" HorizontalAlignment="Right" Height="402" Margin="0,330,6,0" VerticalAlignment="Top" Width="187"/>
        <Button Content="save" HorizontalAlignment="Left" Margin="4,742,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Window>
